<%- if controller_name != 'sessions' %>
  <%= link_to t("devise.log_in"), new_session_path(resource_name), class: "link-primary" %><br />
<% end %>

<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
  <%= link_to t("devise.sign_up"), new_registration_path(resource_name), class: "link-primary" %><br />
<% end %>

<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
  <%= link_to t("devise.forgot_password"), new_password_path(resource_name), class: "link-primary" %><br />
<% end %>

<%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
  <%= link_to t("devise.didnt_received_confirmation"), new_confirmation_path(resource_name), class: "link-primary" %><br />
<% end %>

<%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
  <%= link_to t("devise.didnt_received_lockable"), new_unlock_path(resource_name), class: "link-primary" %><br />
<% end %>

<%- if devise_mapping.omniauthable? %>
  <%- resource_class.omniauth_providers.each do |provider| %>
    <%= link_to t("devise.sign_in_with", provider: OmniAuth::Utils.camelize(provider)), omniauth_authorize_path(resource_name, provider), method: :post, class: "link-primary" %><br />
  <% end %>
<% end %>
